! ==========================================================
! Complete Configuration for Router R3
! ==========================================================

hostname R3

!
! --- Interface connecting to the Server LAN via Switch1 ---
!
interface GigabitEthernet0/1
 description Link to Server LAN via Switch1
 ip address 192.168.20.1 255.255.255.0
!
! --- Interface for the Backup Path to R2 ---
!
interface FastEthernet0/1
 description Backup Path Link to R2
 ip address 10.1.23.2 255.255.255.252
 mtu 1500
 bandwidth 100000
!
! --- Interface for the Primary Path to R1 ---
!
interface FastEthernet1/1
 description Primary Path Link to R1
 ip address 10.1.13.2 255.255.255.252
 mtu 1500
 bandwidth 100000
!
! --- Routing Protocol Configuration (OSPF) ---
!
router ospf 1
 network 192.168.20.0 0.0.0.255 area 0
 network 10.1.23.0 0.0.0.3 area 0
 network 10.1.13.0 0.0.0.3 area 0
!